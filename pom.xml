<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.papeleria</groupId>
  <artifactId>pos-desktop</artifactId>
  <version>1.0.0</version>
  <name>POS Papelería Desktop</name>
  <description>POS Papelería JavaFX Desktop (Java 17)</description>
  <properties>
    <maven.compiler.release>17</maven.compiler.release>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <javafx.version>21.0.4</javafx.version>
    <gson.version>2.10.1</gson.version>
    <poi.version>5.2.5</poi.version>
    <main.class>com.papeleria.pos.ui.Launcher</main.class>
  </properties>

  <dependencies>
    <!-- JavaFX (Linux classifiers) -->
    <dependency>
      <groupId>org.openjfx</groupId>
      <artifactId>javafx-controls</artifactId>
      <version>${javafx.version}</version>
      <classifier>linux</classifier>
    </dependency>
    <dependency>
      <groupId>org.openjfx</groupId>
      <artifactId>javafx-fxml</artifactId>
      <version>${javafx.version}</version>
      <classifier>linux</classifier>
    </dependency>

    <!-- Gson -->
    <dependency>
      <groupId>com.google.code.gson</groupId>
      <artifactId>gson</artifactId>
      <version>${gson.version}</version>
    </dependency>

    <!-- Apache POI (Excel .xlsx) -->
    <dependency>
      <groupId>org.apache.poi</groupId>
      <artifactId>poi-ooxml</artifactId>
      <version>${poi.version}</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <!-- Compiler (Java 17, sin preview) -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.13.0</version>
        <configuration>
          <release>17</release>
        </configuration>
      </plugin>

      <!-- JavaFX Maven Plugin -->
      <plugin>
        <groupId>org.openjfx</groupId>
        <artifactId>javafx-maven-plugin</artifactId>
        <version>0.0.8</version>
        <configuration>
          <mainClass>${main.class}</mainClass>
          <launcher>app</launcher>
          <jlinkZipName>app</jlinkZipName>
          <stripDebug>true</stripDebug>
          <compress>2</compress>
          <noHeaderFiles>true</noHeaderFiles>
          <noManPages>true</noManPages>
          <release>17</release>
          <executable>java</executable>
          <jvmArgs>
            <jvmArg>--add-opens=javafx.graphics/com.sun.javafx.css=ALL-UNNAMED</jvmArg>
          </jvmArgs>
          <launcherArgs>
            <launcherArg></launcherArg>
          </launcherArgs>
          <platform>linux</platform>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
